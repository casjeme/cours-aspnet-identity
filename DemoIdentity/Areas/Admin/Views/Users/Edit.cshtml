@model EditUserViewModel

@{
    ViewData["Title"] = "Modifier un utilisateur";
}

<h2>Modifier un utilisateur</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="UserName" class="form-label">Nom d'utilisateur</label>
        <input asp-for="UserName" class="form-control" required />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Changer le mot de passe (laisser vide pour ne pas modifier)</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AdresseRue" class="form-label">Rue</label>
        <input asp-for="AdresseRue" class="form-control" />
        <span asp-validation-for="AdresseRue" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AdresseCodePostal" class="form-label">Code postal</label>
        <input asp-for="AdresseCodePostal" class="form-control" maxlength="5" />
        <span asp-validation-for="AdresseCodePostal" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AdresseVille" class="form-label">Ville</label>
        <input asp-for="AdresseVille" class="form-control" />
        <span asp-validation-for="AdresseVille" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Rôles</label>
        <div>
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" asp-for="Roles[i].Selected" />
                    <label class="form-check-label" for="Roles[i].Selected">@Model.Roles[i].RoleName</label>
                    <input type="hidden" asp-for="Roles[i].RoleId" />
                    <input type="hidden" asp-for="Roles[i].RoleName" />
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
